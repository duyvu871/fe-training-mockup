<!-- POS Header -->
<header class="bg-primary-600 shadow-lg fixed top-0 left-0 right-0 z-40">
    <div class="px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
            <!-- Left side -->
            <div class="flex items-center">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-cash-register text-2xl text-white"></i>
                    </div>
                    <div class="ml-3">
                        <h1 class="text-xl font-semibold text-white">POS Terminal</h1>
                        <p class="text-sm text-primary-200">Bán hàng nhanh chóng</p>
                    </div>
                </div>
            </div>

            <!-- Center - Current time -->
            <div class="hidden md:flex items-center text-white">
                <i class="fas fa-clock mr-2"></i>
                <span id="current-time" class="text-sm font-medium"></span>
            </div>

            <!-- Right side -->
            <div class="flex items-center space-x-4">
                <!-- Admin link -->
                <a href="/dashboard" class="flex items-center px-3 py-2 text-sm font-medium text-primary-200 hover:text-white hover:bg-primary-700 rounded-lg transition-colors">
                    <i class="fas fa-tachometer-alt mr-2"></i>
                    <span class="hidden sm:inline">Quản lý</span>
                </a>

                <!-- User info -->
                <div class="flex items-center text-white">
                    <div class="w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-user text-white text-sm"></i>
                    </div>
                    <div class="ml-3 hidden sm:block">
                        <p class="text-sm font-medium" id="pos-user-name">Cashier</p>
                        <p class="text-xs text-primary-200" id="pos-user-role">Thu ngân</p>
                    </div>
                </div>

                <!-- Logout -->
                <button type="button" id="pos-logout-button" class="p-2 text-primary-200 hover:text-white hover:bg-primary-700 rounded-lg transition-colors">
                    <span class="sr-only">Đăng xuất</span>
                    <i class="fas fa-sign-out-alt text-lg"></i>
                </button>
            </div>
        </div>
    </div>
</header>

<script>
    // Update current time
    function updateTime() {
        const now = new Date();
        const timeString = now.toLocaleString('vi-VN', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        });
        
        const timeElement = document.getElementById('current-time');
        if (timeElement) {
            timeElement.textContent = timeString;
        }
    }
    
    // Update time every second
    updateTime();
    setInterval(updateTime, 1000);
</script>
