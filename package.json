{
    "name": "pos-api",
    "version": "1.0.0",
    "description": "POS (Point of Sale) API with Express, TypeScript, Prisma, and PostgreSQL",
    "main": "dist/src/server.js",
    "scripts": {
        "dev": "tsup --watch --onSuccess \"npm run start\"",
        "build": "tsup && tsc-alias",
        "build:prod": "rimraf dist && tsup && tsc-alias && npm run tailwind:build",
        "start": " node dist/src/server.js",
        "start:prod": "NODE_ENV=production node dist/src/server.js",
        "setup": "npm run docker:up && timeout 30 && npm run db:setup",
        "db:setup:prod": "npx dotenv -e .env.prod -- \"npm run db:generate && npm run db:migrate && npm run db:seed\"",
        "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:migrate:prod": "prisma migrate deploy",
        "db:seed": "tsx prisma/seed.ts",
        "db:seed:prod": "cross-env NODE_ENV=production node dist/prisma/seed.js",
        "db:studio": "prisma studio",
        "db:reset": "prisma migrate reset --force",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "docs:build": "swagger-jsdoc -d swagger.config.js -o docs/swagger.json src/routes/*.ts",
        "docs:prod:build": "swagger-jsdoc -d swagger.prod.config.js -o docs/swagger.json src/routes/*.ts",
        "docs:gen": "npm run docs:build && npm run docs:prod:build",
        "docs:serve": "swagger-ui-serve docs/swagger.json",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:build": "docker build -t pos-api .",
        "docker:clean": "docker-compose down -v --remove-orphans",
        "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
        "docker:dev:build": "docker-compose -f docker-compose.dev.yml up -d --build",
        "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
        "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
        "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
        "docker:prod:build": "docker-compose -f docker-compose.prod.yml up -d --build",
        "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
        "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
        "tailwind:dev": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/output.css --watch",
        "tailwind:build": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/output.css --minify",
        "clean": "rimraf dist coverage",
        "check": "npm run lint && npm run build && echo ✅ Kiểm tra thành công!"
    },
    "keywords": [
        "pos",
        "point-of-sale",
        "express",
        "typescript",
        "prisma",
        "postgresql",
        "jwt",
        "api"
    ],
    "author": "POS API Team",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^5.7.1",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "bcryptjs": "^2.4.3",
        "chalk": "^5.3.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.13",
        "dotenv": "^16.3.1",
        "express": "^4.19.2",
        "express-handlebars": "^8.0.1",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^9.0.2",
        "marked": "^16.1.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.7",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "tsc-alias": "^1.8.16",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-handlebars": "^6.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/marked": "^5.0.2",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.4",
        "@types/nodemailer": "^6.4.14",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "@vitest/coverage-v8": "^1.0.4",
        "@vitest/ui": "^1.0.4",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "dotenv-cli": "^8.0.0",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.0.1",
        "postcss": "^8.4.32",
        "prettier": "^3.1.1",
        "prisma": "^5.7.1",
        "rimraf": "^5.0.5",
        "tailwindcss": "^3.3.6",
        "tsup": "^8.3.5",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3",
        "vitest": "^1.0.4"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "prisma": {
        "seed": "node dist/prisma/seed.js"
    }
}
