# Production Environment Configuration
NODE_ENV=production
PORT=3330

# Database Configuration
POSTGRES_DB=pos_db
POSTGRES_USER=pos_user
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION_STRONG_PASSWORD
DATABASE_URL="postgresql://pos_user:CHANGE_THIS_IN_PRODUCTION_STRONG_PASSWORD@postgres:5432/pos_db?schema=public"

# JWT Configuration - MUST CHANGE IN PRODUCTION
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_VERY_STRONG_SECRET_KEY
JWT_REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION_VERY_STRONG_REFRESH_SECRET_KEY
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://fe-api.training.ssit.company,https://training.ssit.company,https://ssit.company,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# File Upload Configuration
MAX_FILE_SIZE=5mb
UPLOAD_PATH=./uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Configuration
APP_NAME="POS API Training"
APP_VERSION=1.0.0
APP_URL=https://fe-api.training.ssit.company

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
